# Environment variables.
export \
    EDITOR=nvim \
    SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket" \
    GPG_TTY=$(tty) \
    VIRTUAL_ENV_DISABLE_PROMPT=1 \
    AUTOENV_ENABLE_LEAVE=1 \
    FZF_DEFAULT_COMMAND='fd --type f --hidden' \
    PNPM_HOME=$HOME/.local/bin \
    GRIM_DEFAULT_DIR=$HOME/screenshots \
    LIBVIRT_DEFAULT_URI=qemu:///system \
    MODAL_CONFIG_PATH="$HOME/.config/modal/modal.toml" \
    ENABLE_LSP_TOOL=1 \
    GOBIN=$HOME/.local/bin \
    GOPATH=$HOME/.local/share/go \
    PDFCONVERT_OUTPUT_DIR="$HOME/pdf_documents/" \

# Prepend nix-ld libs, preserving any inherited LD_LIBRARY_PATH, such as from direnv or nix-shell.
export LD_LIBRARY_PATH="$NIX_LD_LIBRARY_PATH${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"

# Executable search path.
typeset -U path PATH
path+=(
    ~/bin
    ~/.local/bin
    ~/.cargo/bin
    ~/.npm-global/bin
    ~/.ghcup/bin
)
export PATH
