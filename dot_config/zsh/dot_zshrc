# Zsh settings for interactive shells.

# Set terminal colors before running tmux.
if [[ -n $DISPLAY ]] && [[ -z $TMUX ]]; then
    if [[ -n "$PS1" ]]; then
        source $HOME/.config/gruvbox.sh
    fi
    # exec env /usr/bin/tmux new-session -A -s 0
fi

# Zsh options.
setopt \
  append_history \
  share_history \
  extended_history \
  histignorespace \
  hist_find_no_dups \
  hist_ignore_all_dups \
  hist_reduce_blanks \
  no_case_glob \
  extended_glob \
  noglobdots \
  correct \
  completeinword \
  longlistjobs \
  notify \
  hash_list_all \
  nohup \
  auto_pushd \
  pushd_ignore_dups \
  prompt_subst \
  nobeep \
  noshwordsplit \
  noclobber \
  unset \

# Zsh history variables.
HISTFILE=$ZDOTDIR/.zhistory
HISTSIZE=10000
SAVEHIST=$HISTSIZE

# Prompt
function last_exit_code() {
  local EXIT_CODE=$?
  if [[ $EXIT_CODE -ne 0 ]]; then
    echo "[$EXIT_CODE] "
  fi
}
function venv_status {
  if [[ -n "$VIRTUAL_ENV" ]]; then
    echo "(venv) "
  fi
}
PROMPT=$'\n''%K{237}%F{4}$%f%k '
RPROMPT='%F{5}$(last_exit_code)$(venv_status)%~%f'
PROMPT2='%_%K{237}%F{4}>%f%k '

# Completion function definitions.
fpath+=~/.config/zsh/zfunc

# Plugins.
autoload -Uz \
  compinit \
  up-line-or-beginning-search down-line-or-beginning-search
compinit
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' completer _expand_alias _complete _ignored

zle -N up-line-or-beginning-search
zle -N down-line-or-beginning-search

# Key bindings.
bindkey -e
bindkey '^P' up-line-or-beginning-search
bindkey '^N' down-line-or-beginning-search

# Aliases.
alias sudo='sudo -v; sudo '
alias ls='ls --color=auto -v'
alias i='ls'
alias ll='ls -lh'
alias la='ls -A'
alias lla='ls -lhA'
alias cp='cp -i'
alias mv='mv -i'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -color=auto'
alias tar='tar --keep-old-files'
alias vim='nvim'
alias veracrypt='veracrypt --text'

# Execute private zshrc.
ZSH_PRIVATE=~/.config/zsh/.zshrc_private
if [[ -f $ZSH_PRIVATE ]]; then
    source $ZSH_PRIVATE
fi

# Autoenv, for per-directory configuration during cd. https://github.com/hyperupcall/autoenv
source /usr/share/autoenv-git/activate.sh
